
<%= form_for @address do |f| %>

  <% if @user %>
  <h4>USER ID:<%= @user.id %></h>
  <% end %>
  

  <div class="form-group">
    <%= f.label "Street Address" %>
    <%= f.text_field :street_address, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:street_address, @address) if @address.errors[:street_address] %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Zip Code" %>
    <%= f.text_field :zip_code, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:zip_code, @address) if @address.errors[:zip_code] %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "City: " %>
    <%= collection_select(:address, :city_id, @cities, :id, :name ) %>
  </div>
  <div class="form-group">
    <%= f.label "State: " %>
    <%= collection_select(:address, :state_id, @states, :id, :name ) %>
  </div>
  <%= f.hidden_field :user_id, value: "#{@user.id}" %>
  <%= f.submit "Create", :class => "btn btn-primary" %>
<% end %>










