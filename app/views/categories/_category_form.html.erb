<hr>
<%= form_for @category do |f| %>
  <div class="form-group">
    <label for="id">ID (Automatically Generated)</label>
    <input type="text" name="id" class="form-control" disabled="true" value="<%=@category.id%>">
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:name, @category) if @category.errors[:name] %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:description, @category) if @category.errors[:description] %>
    </div>
  </div>
  <%= f.submit "Create", :class => "btn btn-primary" %>
<% end %>