<div class="bg-success"><%= flash[:success] %></div>
<div class="bg-danger"><%= flash[:error] %></div>
  <div class="panel panel-defualt">
  <div class="panel-body">
    <h2 class="text-center" >Viking Store Users</h2>

      <%= link_to "Create New User", new_user_path , :class => "btn btn-primary btn-lg btn-block" %>

<table class="table table-striped">
  
    <th>ID</th>
    <th>Name</th>
    <th>Completed Orders</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  
  <% @users.each do |u| %>
  <tr>
    <td><%= u.id  %></td>
    <td><%= u.name  %></td>
    <td><%= u.completed_orders %></td>
    <td><%= u.created_at.strftime("%m/%d/%Y")  %></td>
    <td><%= u.updated_at.strftime("%m/%d/%Y")  %></td>
    <td><%= link_to "show", user_path(u) %></td>
    <td><%= link_to "edit", edit_user_path(u) %></td>
    <td><%= link_to "delete", user_path(u), :method => :delete, :confirm => "Are you sure?" %></td>
  </tr>
  <% end %>
</table>